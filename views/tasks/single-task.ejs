<div class="container">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body card-new">
        <h3 class="text-center mb-3">Update Task</h3>
        <br>
        <form action="/dashboard/task/<%= task._id %>/update" method="POST">

        <input type="text" hidden value="<%= locals.currentUser.email %>" id="userCreated" name="userCreated">

          <div class="form-group">
            <label for="taskName">Task Name:</label>
            <input
              type="text"
              id="taskName"
              name="taskName"
              class="form-control"
              value="<%= task.taskName %>"
            />
          </div>

          <div class="form-group">
            <label for="exampleFormControlTextarea1">Description:</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" id="description" name="description" value="<%= task.description %>"><%= task.description %></textarea>
            </input>
          </div>

          <div class="form-group">
            <label for="start">Due Date:</label>
            <input type="date" id="dueDate" name="dueDate" class="form-control""
                   value="<%= task.dueDate %>"
                   min="2020-12-18">
          </div>

          <% if (task.timeComplete == 'Low') { %>
          <div class="form-group">
            <label for="timeComplete">Priority:</label>

            <select id="timeComplete" name="timeComplete" class="form-control">
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
          </div>
          <% } %>

          <% if (task.timeComplete == 'Medium') { %>
            <div class="form-group">
              <label for="timeComplete">Priority:</label>
  
              <select id="timeComplete" name="timeComplete" class="form-control">
                  <option value="Medium">Medium</option>
                  <option value="Low">Low</option>
                  <option value="High">High</option>
              </select>
            </div>
            <% } %>

            <% if (task.actionType == 'Pending') { %>
            <input type="text" hidden value="Pending" id="actionType" name="actionType">
            <% } %>

            <% if (task.actionType == 'Complete') { %>
              <input type="text" hidden value="Complete" id="actionType" name="actionType">
            <% } %>


          <button type="submit" class="btn btn-primary btn-block">Update Task</button>
          <br>

            <!-- Button trigger modal -->
            <button type="button" class="btn btn-outline-danger btn-block" data-toggle="modal" data-target="#exampleModalCenter">
                Remove Task
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content"> 
                    <div class="modal-body">
                    <h6>Are you sure you want to delete this task?</h6>
                    </div>
                    <div class="modal-footer">
                    <a href="/dashboard/task/<%= task._id %>/delete" class="btn btn-danger btn-block" role="button" method="POST">
                        Confirm Remove Task
                    </a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    
                    </div>
                </div>
                </div>
            </div>

          
        </form>
      </div>
    </div>
  </div>
</div>