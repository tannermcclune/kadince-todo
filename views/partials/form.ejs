<form action="/dashboard/create" method="POST">

    <input type="text" hidden value="<%= locals.currentUser.email %>" id="userCreated" name="userCreated">

      <div class="form-group">
        <label for="taskName">Task Name:</label>
        <input
          type="text"
          id="taskName"
          name="taskName"
          class="form-control"
        />
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Description:</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" id="description" name="description"></textarea>
        </input>
      </div>

      <div class="form-group">
        <label for="start">Due Date:</label>
        <input type="date" id="dueDate" name="dueDate" class="form-control"
               value="2020-12-19"
               min="2020-12-19">
      </div>

      <div class="form-group">
        <label for="timeComplete">Priority:</label>

        <select id="timeComplete" name="timeComplete" class="form-control">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
      </div>

        <input type="text" hidden value="Pending" id="actionType" name="actionType">
      

      <button type="submit" class="btn btn-primary btn-block">+ New Task</button>
    </form>